{
  "compilerOptions": {
    "module": "ES2022",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./fe/*"
      ]
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules", // 排除 node_modules
    "**/node_modules/*",
    "fe",
    "pages",
    "dist",
    "build"
  ]
}